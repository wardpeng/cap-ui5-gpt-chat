{
    "build": {
        "target": "gen",
        "tasks": [
            {
                "for": "hana",
                "src": "db",
                "options": {
                    "model": [
                        "db",
                        "srv"
                    ]
                }
            },
            {
                "for": "node-cf",
                "src": "srv",
                "options": {
                    "model": [
                        "db",
                        "srv"
                    ]
                }
            }
        ]
    },
    "[production]": {
        "requires": {
            "db": {
                "kind": "hana",
                "model": [
                    "db",
                    "srv"
                ]
            },
            "auth": {
                "kind": "jwt"
            }
        }
    },
    "[development]": {
        "requires": {
            "auth": {
                "kind": "mocked",
                "users": {
                    "developer": {
                        "password": "helloworld",
                        "ID": "developer",
                        "userAttributes": {
                            "email": "developer@p36.io"
                        },
                        "roles": [
                            "human"
                        ]
                    },
                    "pirate": {
                        "password": "ahoy",
                        "ID": "pirate",
                        "userAttributes": {
                            "email": "pirate@p36.io"
                        },
                        "roles": [
                            "human"
                        ]
                    }
                }
            },
            "db": {
                "kind": "hana",
                "model": [
                    "db",
                    "srv"
                ],
                "credentials": {
                    "database": "chat.db"
                }
            }
        }
    },
    "odata": {
        "version": "v4"
    },
    "hana": {
        "deploy-format": "hdbtable"
    }
}